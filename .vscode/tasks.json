{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Server",
            "group": "build",
            "type": "shell",
            "command": "cargo build --package wgsl_analyzer",
            "problemMatcher": "$rustc"
        },
        {
            "label": "Build Server (Release)",
            "group": "build",
            "type": "shell",
            "command": "cargo build --package wgsl_analyzer --release",
            "problemMatcher": "$rustc"
        },
        {
            "label": "Build and Copy Server",
            "group": "build",
            "dependsOn": ["Build Server"],
            "type": "shell",
            "windows": {
                "command": "copy target/release/wgsl_analyzer.exe editors/code/out",
                "options": {
                    "env": {
                        "COPYCMD": "/Y",
                    },
                },
            },
            "osx": { "command": "cp target/debug/wgsl_analyzer editors/code/out" },
            "linux": { "command": "cp target/debug/wgsl_analyzer editors/code/out" },
            "problemMatcher": "$rustc",
        },
        {
            "label": "Build and Copy Server (Release)",
            "group": "build",
            "dependsOn": ["Build Server (Release)"],
            "type": "shell",
            "windows": {
                "command": "copy target/release/wgsl_analyzer.exe editors/code/out",
                "options": {
                    "env": {
                        "COPYCMD": "/Y",
                    },
                },
            },
            "osx": { "command": "cp target/release/wgsl_analyzer editors/code/out" },
            "linux": { "command": "cp target/release/wgsl_analyzer editors/code/out" },
            "problemMatcher": "$rustc",
        },
        {
            "label": "Build Extension",
            "group": "build",
            "type": "npm",
            "script": "build",
            "path": "editors/code/",
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/editors/code/"
                ]
            },
        },
        {
            "label": "Build Server and Extension",
            "group": "build",
            "dependsOn": [
                "Build and Copy Server",
                "Build Extension"
            ],
            "problemMatcher": "$rustc"
        },
        {
            "label": "Build Server (Release) and Extension",
            "group": "build",
            "dependsOn": [
                "Build and Copy Server (Release)",
                "Build Extension"
            ],
            "problemMatcher": "$rustc"
        },
    ]
}