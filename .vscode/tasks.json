{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Server",
            "group": "build",
            "type": "shell",
            "command": "cargo build --package wgsl_analyzer",
            "problemMatcher": "$rustc"
        },
        {
            "label": "Build Server (Release)",
            "group": "build",
            "type": "shell",
            "command": "cargo build --package wgsl_analyzer --release",
            "problemMatcher": "$rustc"
        },
        {
            "label": "Build and Copy Server",
            "group": "build",
            "dependsOn": ["Build Server"],
            "type": "shell",
            "windows": {
                "command": "npx",
                "args": [
                    "concurrently",
                    "--max-processes",
                    "1",
                    "--success",
                    "first",
                    "cd .",
                    "move wgsl_analyzer.exe wgsl_analyzer.old",
                    "copy ..\\..\\..\\target\\debug\\wgsl_analyzer.exe .",
                    "taskkill /f /im wgsl_analyzer.exe",
                    "del wgsl_analyzer.old",
                ],
            },
            "osx": {
                "command": "npx",
                "args": [
                    "concurrently",
                    "--max-processes",
                    "1",
                    "--success",
                    "first",
                    "cd .",
                    "move wgsl_analyzer wgsl_analyzer.old",
                    "copy ..\\..\\..\\target\\debug\\wgsl_analyzer .",
                    "taskkill /f /im wgsl_analyzer",
                    "del wgsl_analyzer.old",
                ],
            },
            "linux": {
                "command": "npx",
                "args": [
                    "concurrently",
                    "--max-processes",
                    "1",
                    "--success",
                    "first",
                    "cd .",
                    "move wgsl_analyzer wgsl_analyzer.old",
                    "copy ..\\..\\..\\target\\debug\\wgsl_analyzer .",
                    "taskkill /f /im wgsl_analyzer",
                    "del wgsl_analyzer.old",
                ],
            },
            "options": {
                "cwd": "editors/code/out",
            },
        },
        {
            "label": "Build and Copy Server (Release)",
            "group": "build",
            "dependsOn": ["Build Server (Release)"],
            "type": "shell",
            "windows": {
                "command": "npx",
                "args": [
                    "concurrently",
                    "--max-processes",
                    "1",
                    "--success",
                    "first",
                    "cd .",
                    "move wgsl_analyzer.exe wgsl_analyzer.old",
                    "copy ..\\..\\..\\target\\release\\wgsl_analyzer.exe .",
                    "taskkill /f /im wgsl_analyzer.exe",
                    "del wgsl_analyzer.old",
                ],
            },
            "osx": {
                "command": "npx",
                "args": [
                    "concurrently",
                    "--max-processes",
                    "1",
                    "--success",
                    "first",
                    "cd .",
                    "move wgsl_analyzer wgsl_analyzer.old",
                    "copy ..\\..\\..\\target\\release\\wgsl_analyzer .",
                    "taskkill /f /im wgsl_analyzer",
                    "del wgsl_analyzer.old",
                ],
            },
            "linux": {
                "command": "npx",
                "args": [
                    "concurrently",
                    "--max-processes",
                    "1",
                    "--success",
                    "first",
                    "cd .",
                    "move wgsl_analyzer wgsl_analyzer.old",
                    "copy ..\\..\\..\\target\\release\\wgsl_analyzer .",
                    "taskkill /f /im wgsl_analyzer",
                    "del wgsl_analyzer.old",
                ],
            },
        },
        {
            "label": "Build Extension",
            "group": "build",
            "type": "npm",
            "script": "build",
            "path": "editors/code/",
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/editors/code/"
                ]
            },
        },
        {
            "label": "Build Server and Extension",
            "group": "build",
            "dependsOn": [
                "Build and Copy Server",
                "Build Extension"
            ],
        },
        {
            "label": "Build Server (Release) and Extension",
            "group": "build",
            "dependsOn": [
                "Build and Copy Server (Release)",
                "Build Extension"
            ],
        },
    ]
}